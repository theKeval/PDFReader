<Page
    x:Class="PDFReader.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PDFReader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFDEDEDE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="0,19,0,18" TextWrapping="Wrap" Text="Welcome..!" VerticalAlignment="Center" Foreground="#FF007ACC" FontSize="60" Grid.Row="1" Grid.Column="1"/>
        <Grid Grid.Column="2" HorizontalAlignment="Left" Height="200" Margin="0" Grid.Row="2" VerticalAlignment="Bottom" Width="300" Background="#FF67A7BF" Tapped="grd_BrowseOnTapped">
            <TextBlock HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="Browse PDF" VerticalAlignment="Center" FontSize="40" FontFamily="Candara"/>
        </Grid>



    </Grid>
</Page>